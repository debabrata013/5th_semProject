<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Payment Requests</title>
    <link rel="stylesheet" href="/css/styles.css">
    <%- include("./partials/link") %>
</head>
<body>
    <%- include("./partials/admin_nav") %>
    <div class="container">
        <header>
            <h1>Payment Requests</h1>
        </header>
        <main>
            <table id="paymentTable">
                <thead>
                    <tr>
                        <th>User Name</th>
                        <th>Email</th>
                        <th>Coins Requested</th>
                        <th>Transaction ID</th>
                        <th>Payment Screenshot</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    <!-- Payment request rows will be inserted here dynamically -->
                </tbody>
            </table>
        </main>
    </div>

    <script>
        document.addEventListener('DOMContentLoaded', () => {
            fetchPaymentRequests();
        });

        // Fetch all payment requests from the backend
        async function fetchPaymentRequests() {
            try {
                const response = await fetch('/api/payment-requests');
                if (!response.ok) {
                    throw new Error('Network response was not ok');
                }
                const paymentRequests = await response.json();
                populateTable(paymentRequests);
            } catch (error) {
                console.error('There was a problem with the fetch operation:', error);
            }
        }

        // Populate the table with payment requests
        function populateTable(paymentRequests) {
            const tableBody = document.querySelector('#paymentTable tbody');
            tableBody.innerHTML = ''; // Clear existing content

            paymentRequests.forEach(request => {
                const row = document.createElement('tr');
                row.setAttribute('data-id', request._id);

                row.innerHTML = `
                    <td>${request.userName}</td>
                    <td>${request.email}</td>
                    <td>${request.coins}</td>
                    <td>${request.transactionId}</td>
                    <td>
                        <a href="/uploads/${request.screenshotPath}" target="_blank">View Screenshot</a>
                    </td>
                    <td>
                        <button class="success-btn" onclick="handleRequest('${request._id}', 'success')">Success</button>
                        <button class="reject-btn" onclick="handleRequest('${request._id}', 'reject')">Reject</button>
                    </td>
                `;

                tableBody.appendChild(row);
            });
        }

        // Handle approval or rejection of payment
        async function handleRequest(id, action) {
            try {
                const response = await fetch(`/api/payment-requests/${id}`, {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                    },
                    body: JSON.stringify({ action }),
                });

                if (response.ok) {
                    // Remove the processed request from the table
                    document.querySelector(`#paymentTable tr[data-id="${id}"]`).remove();
                } else {
                    console.error('Failed to process request:', await response.text());
                }
            } catch (error) {
                console.error('There was a problem processing the request:', error);
            }
        }
    </script>
</body>
</html>
